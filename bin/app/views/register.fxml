<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="900" prefHeight="600" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <HBox spacing="20" alignment="CENTER">
        <!-- Left Side Image -->
        <VBox alignment="CENTER" prefWidth="450">
            <ImageView fitWidth="350" fitHeight="350" styleClass="signup-image" />
        </VBox>

        <!-- Right Side Form -->
        <VBox alignment="CENTER_LEFT" spacing="10" prefWidth="450">
            <Label text="Sign up" styleClass="title" />
            <Label text="Start managing resident accounts efficiently now." styleClass="subtitle" />
            
            <VBox spacing="10" prefWidth="100">
                <TextField promptText="Enter full name" styleClass="input-field" />
                <TextField promptText="Enter resident's email" styleClass="input-field" />
                <TextField promptText="Choose a username" styleClass="input-field" />
                <PasswordField promptText="Set a secure" styleClass="input-field" />
                <PasswordField promptText="Confirm your password" styleClass="input-field" />
            </VBox>
            
            <HBox spacing="5" alignment="CENTER_LEFT">
                <CheckBox />
                <Label text="By signing up, you agree with Terms and Privacy Policy." />
            </HBox>

            <Button text="Create account" styleClass="signup-button" />
            <Label text="Already a user? Sign in. Log in" styleClass="login-link" />
        </VBox>
    </HBox>
</AnchorPane>
